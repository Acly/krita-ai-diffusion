    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Krita",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "windows": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "${env:APPDATA}/krita/pykrita"
                    }
                ]
            },
            "linux": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "~/.local/share/krita/pykrita"
                    }
                ]
            }
        }
    ]
}